<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="CustomToolbarImage">
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/padding_item</item>
    </style>

    <style name="CustomToolbarTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">@dimen/app_title_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomFloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorOnPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="singleLine">true</item>
        <item name="boxBackgroundColor">@color/colorOnBackground</item>
        <item name="endIconMode">clear_text</item>
        <item name="startIconTint">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/app_title_text_size</item>
        <item name="paddingStart">@dimen/padding_toolbar</item>
        <item name="paddingEnd">@dimen/padding_toolbar</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
